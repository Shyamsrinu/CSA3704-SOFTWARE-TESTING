package squarecube;

import static org.junit.Assert.assertTrue;
import java.util.Scanner;

public class squarecube1 {
    public static void main(String[] args) {
        try {
            Scanner s = new Scanner(System.in);
            System.out.print("Enter a number: ");
            double n = s.nextDouble();

            double square = n * n;
            double cube = n * n * n;

            System.out.println("The square of the number = " + square);
            System.out.println("The cube of the number = " + cube);

            // Example assertion: if input is 6, square = 36, cube = 216
            if (n == 6) {
                assertTrue("Square of 6 should be 36", square == 36);
                assertTrue("Cube of 6 should be 216", cube == 216);
            }

            s.close();
        } catch (Exception e) {
            System.out.println("Invalid input");
        }
    }
}
